{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "db",
            "image": "postgres",
            "hostname": "db",
            "essential": true,
            "environment": [
                {
                    "name": "POSTGRES_DB",
                    "value": "postgres"
                },
                {
                    "name": "POSTGRES_USER",
                    "value": "postgres"
                },
                {
                    "name": "POSTGRES_PASSWORD",
                    "value": "postgres"
                }
            ],
            "links": "db",
            "memory": 300
        },
        {
            "name": "backend",
            "image": "moumenh/backend",
            "hostname": "backend",
            "essential": false,
            "portMappings": [
                {
                    "hostPort": 8000,
                    "containerPort": 80
                }
            ],
            "links": "db",
            "memory": 300
        },
        {
            "name": "frontend",
            "image": "moumenh/client",
            "hostname": "frontend",
            "essential": false,
            "portMappings": [
                {
                    "hostPort": 3000,
                    "containerPort": 80
                }
            ],
            "links": "backend",
            "memory": 300
        }
    ]
}